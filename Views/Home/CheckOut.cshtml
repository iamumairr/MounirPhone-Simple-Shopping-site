@model MounirPhone.Models.Order
@{
    ViewData["Title"] = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section heading{
<section class="content1">
    <h1>Check Out</h1>
</section>
}
<br />

<div class="container">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-6 border shadow p-2">
            <h4 class="text-center text-info">Total Price : @Model.OrderPrice</h4>

            <form asp-action="ConfirmOrder" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="OrderPrice" />
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" min="1" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" min="1" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <br />
                <input type="submit" class="btn btn-primary" value="Confirm Order"/>
            </form>
        </div>
    </div>
</div>