@model IEnumerable<MounirPhone.Models.Cart>
@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section heading{
<section class="content1">
    <h1>Shopping Cart</h1>
</section>
}
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-sm">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Username</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Sub Total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Username</td>
                            <td>@item.Quantity</td>
                            <td>@item.UnitPrice</td>
                            <td>@item.SubTotal</td>
                            <td>
                                <a asp-action="EditCart" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Update Quantity</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <br />
            <a asp-action="CheckOut" asp-controller="Home" class="btn btn-success">Check Out</a>
        </div>
    </div>
</div>