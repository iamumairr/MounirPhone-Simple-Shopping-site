@model IEnumerable<MounirPhone.Models.Product>
@{
    ViewData["Title"] = "Our Products";
}

@section heading{
<section class="content1">
    <h1>Welcome to Our phone collection.</h1>
    <p>
        Discover a wide range of the latest phones on the market.<br />With
        the best features.
    </p>
</section>
}

<br />
<div class="container">
    <div class="row">
        <div class="col-md-12 card border shadow">
            <div class="card-body">
                <div class="row">
                    <div class="col-4">
                        <form asp-controller="Home" asp-action="Product">
                            <p>
                                Title: <input type="text" name="SearchString" class="form-control" />
                                <input type="submit" value="Search" class="btn btn-sm btn-outline-primary" />
                            </p>
                        </form>
                    </div>
                </div>
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-4 border p-2 mx-1">
                            <h3 class="text-info">@product.Name</h3>
                            <img src="~/Uploads/@product.ProductImage" alt="" width="100%" height="200" />
                            <p>
                                @product.Description
                            </p>
                            <a asp-action="AddToCart" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-sm btn-success">Add To Cart</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>