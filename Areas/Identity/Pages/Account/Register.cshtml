@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section heading{
<div class="container mt-2">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="card col-md-4 shadow border p-2 bg-transparent">
            <section>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2 class="text-white fw-bold text-center">Register</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label text-white"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" class="form-label text-white"></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword" class="form-label text-white"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="d-grid gap-2">
                        <button id="login-submit" type="submit" class="btn btn-outline-primary fw-bolder">Register</button>
                    </div>
                    <div class="mt-1">
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-decoration-none text-white">Login</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
}

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
